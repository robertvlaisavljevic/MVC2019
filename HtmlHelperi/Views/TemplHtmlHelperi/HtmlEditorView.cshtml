@model HtmlHelperi.Models.OsobaTempl
@{
    Layout = null;
    Html.EnableClientValidation(false);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HtmlEditorView</title>
    <style>
        label{
            display: inline-block;
            width: 150 px;
            margin: 5 px;
            font-weight:bold;
        }
    </style>
</head>
<body>
    <div> 
        @using (Html.BeginForm())
        {
            <div>
                <label>Id:</label>
                @Html.Editor("OsobaId")
            </div>
            <div>
                <label>Ime:</label>
                @Html.Editor("Ime")
            </div>
            <div>
                <label>Prezime:</label>
                @Html.Editor("Prezime")
            </div>
            <div>
                <label>Email:</label>
                @Html.Editor("Email")
            </div>
            <div>
                <label>Mjesto Stanovanja:</label>
                @Html.EditorFor(x => x.MjestoStanovanja)
            </div>
            <div>
                <label>Spol:</label>
                @Html.EditorFor(x => x.Spol)
            </div>
            <div>
                <label>Zaposlen:</label>
                @Html.EditorFor(x => x.Zaposlen)
            </div>
            <div>
                <label>Datum Rodjenja:</label>
                @Html.EditorFor(x => x.DatumRodjenja)
            </div>
            <div>
                <label>Napomena:</label>
                @Html.EditorFor(x => x.Napomena)
            </div>
            <input type="submit" value="Posalji"/>
        }
    </div>
</body>
</html>
